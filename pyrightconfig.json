// pyrightconfig.json (optional, for fine-grained Pylance/Pyright control)
{
    "include": [
        "src" // Or "." if your source is directly in the root
    ],
    "exclude": [
        "**/node_modules",
        "**/__pycache__",
        "venv",
        ".venv",
        "build",
        "dist",
        "docs",
        "tests",
        "generated_code",
        "*.env",
        "*.specstory",
        "*.mypy_cache",
        "*.pycache__",
        "*.pytest_cache",
        "*.ruff_cache",
        "*.coverage",
        "*.coverage.*",
        ".vscode",
        "build",
    ],
    "typeCheckingMode": "strict",
    // ... other Pyright settings ...
}
