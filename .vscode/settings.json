{
    // Use Ruff as the formatter and linter (native VSCode extension)
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    // Python / Testing
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // Ruff (official extension)
    // Ruff as linter and formatter
    "ruff.enable": true,
    "ruff.configuration": "pyproject.toml", // absolute path for container
    "ruff.configurationPreference": "filesystemFirst", // always prefer pyproject.toml
    "ruff.importStrategy": "fromEnvironment", // use ruff from your container, not bundled
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    // MyPy (official extension)
    "mypy.enabled": true,
    "python.languageServer": "Pylance",
    "python.analysis.diagnosticMode": "workspace",
    // "mypy.runUsingActiveInterpreter": true
}
