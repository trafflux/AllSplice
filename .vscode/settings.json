{
    // Ruff as linter and formatter
    "ruff.enable": true,
    "ruff.configuration": "pyproject.toml", // absolute path for container
    "ruff.configurationPreference": "filesystemFirst", // always prefer pyproject.toml
    "ruff.importStrategy": "fromEnvironment", // use ruff from your container, not bundled
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "mypy.enabled": true,
    "python.languageServer": "Pylance",
    "python.analysis.diagnosticMode": "workspace",
    "python.testing.unittestEnabled": false,
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.analysis.extraPaths": [
        "./src"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    "python.analysis.typeCheckingMode": "basic",
    "github.copilot.chat.agent.terminal.allowList": {
        "python": true,
        "uv": true,
        "uvicorn": true,
        "pytest": true,
        "mypy": true,
        "ruff": true
    },
}