{
    "name": "Python Dev (AllSplice)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "saoudrizwan.claude-dev",
                "matangover.mypy",
                "charliermarsh.ruff",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                // "python.linting.enabled": false,
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.terminal.activateEnvironment": false,
                "python.languageServer": "Pylance",
                "python.analysis.diagnosticMode": "workspace",
                "python.analysis.indexing": true,
                "python.analysis.autoSearchPaths": true,
                "python.analysis.useLibraryCodeForTypes": true,
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                // Python / Testing
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                // Test discovery
                "python.testing.unittestEnabled": false
                // "python.defaultInterpreterPath": "/usr/local/bin/python",
                // "python.terminal.activateEnvironment": false,
                // "editor.formatOnSave": true,
                // "python.linting.enabled": false,
                // "python.analysis.extraPaths": [
                //     "./src"
                // ],
                // "editor.defaultFormatter": "charliermarsh.ruff",
                // "editor.codeActionsOnSave": {
                //     "source.fixAll": "explicit",
                //     "source.organizeImports": "explicit"
                // },
                // "python.analysis.indexing": true,
                // "python.analysis.autoSearchPaths": true,
                // "python.analysis.diagnosticMode": "workspace",
                // "python.analysis.typeCheckingMode": "basic",
                // "python.analysis.useLibraryCodeForTypes": true
                //DISABLED FOR NOW
                // Test discovery
                // "python.testing.pytestEnabled": true,
                // "python.testing.pytestArgs": [
                //     "tests"
                // ],
                // "python.testing.unittestEnabled": false
            }
        }
    },
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated"
    ],
    "remoteUser": "root",
    "runArgs": [
        "--network=devnet"
    ],
    "postCreateCommand": "if [ -f /workspace/.clinerules/cline_mcp_settings.json ]; then mkdir -p /root/.vscode-server/data/User/globalStorage/saoudrizwan.claude-dev/settings && cp /workspace/.clinerules/cline_mcp_settings.json /root/.vscode-server/data/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json; fi"
}