{
    "name": "Python Dev (AllSplice)",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            // Cline and Copilot extensions for AI development (Optional)
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "matangover.mypy",
                "charliermarsh.ruff",
                "ms-azuretools.vscode-docker",
                "saoudrizwan.claude-dev",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.terminal.activateEnvironment": false,
                "python.languageServer": "Pylance",
                "python.analysis.diagnosticMode": "workspace",
                "python.analysis.indexing": true,
                "python.analysis.autoSearchPaths": true,
                "python.analysis.useLibraryCodeForTypes": true,
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "python.testing.unittestEnabled": false
            }
        }
    },
    "workspaceFolder": "/workspace",
    "mounts": [
        // Mounts the local workspace folder to the container's workspace directory
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated"
    ],
    "remoteUser": "root",
    "runArgs": [
        "--network=devnet"
    ],
    // Copies the Cline MCP settings file to the global storage for the Cline extension (Optional)
    "postCreateCommand": "if [ -f /workspace/.clinerules/cline_mcp_settings.json ]; then mkdir -p /root/.vscode-server/data/User/globalStorage/saoudrizwan.claude-dev/settings && cp /workspace/.clinerules/cline_mcp_settings.json /root/.vscode-server/data/User/globalStorage/saoudrizwan.claude-dev/settings/cline_mcp_settings.json; fi"
}
